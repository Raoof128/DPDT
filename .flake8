[flake8]
# Configuration for Flake8 linter
# https://flake8.pycqa.org/en/latest/user/configuration.html

max-line-length = 127
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .nox,
    .eggs,
    *.egg,
    build,
    dist,
    venv,
    .venv,
    env,
    .env,
    htmlcov,
    .coverage

# Ignore specific errors
ignore =
    # E203: Whitespace before ':' (conflicts with Black)
    E203,
    # W503: Line break before binary operator (conflicts with Black)
    W503,
    # E501: Line too long (handled by max-line-length)
    # D100: Missing docstring in public module (too strict for all files)
    D100,
    # D104: Missing docstring in public package
    D104,
    # D107: Missing docstring in __init__ (handled case by case)
    D107,

# Per-file ignores
per-file-ignores =
    # Tests can have broader ignores
    tests/*:D101,D102,D103,S101
    # __init__ files don't need full docstrings
    */__init__.py:F401,D104

# Docstring conventions
docstring-convention = google

# Import order settings (flake8-import-order)
import-order-style = google
application-import-names = backend

# Show source code for errors
show-source = true

# Count statistics
statistics = true
